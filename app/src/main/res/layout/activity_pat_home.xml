<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pat_HomeActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_header_selector_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:id="@+id/ui_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="@drawable/rectangle_round"
                    android:elevation="6dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Patient Home"
                        android:textColor="#ffffff"
                        android:textSize="26sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose an option"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="80dp"
                    android:layout_weight="6"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view"
                    app:layout_constraintVertical_bias="0.084">

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="15dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="5dp"
                        tools:ignore="MissingConstraints">

                        <Button
                            android:id="@+id/searchBtn"
                            android:layout_width="0dp"
                            android:minHeight="200dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_home"
                            android:text="Search\nDoctor"
                            android:textColor="#14805a"
                            android:textSize="13sp" />

                        <Button
                            android:id="@+id/myDoctors"
                            android:minHeight="200dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_home"
                            android:text="My Doctors"
                            android:textColor="#14805a"
                            android:textSize="13sp" />

                        <Button
                            android:id="@+id/myChatBtn"
                            android:layout_width="0dp"
                            android:minHeight="200dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_home"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:paddingBottom="8dp"
                            android:text="My Chat"
                            android:textAllCaps="false"
                            android:textColor="#14805a"
                            android:textSize="13sp"

                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btn_profile"
                            android:layout_width="0dp"
                            android:minHeight="200dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/button_home"
                            android:gravity="center"
                            android:text="Profile"
                            android:textColor="#14805a"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="30dp"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="15dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="5dp"

                        >


                        <Button
                            android:id="@+id/btn_view_your_record"
                            android:layout_width="0dp"
                            android:minHeight="200dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_home"
                            android:text="View your records"
                            android:textColor="#14805a"
                            android:textSize="13sp" />

                        <Button
                            android:id="@+id/btn_order_lab"
                            android:layout_width="0dp"
                            android:minHeight="200dp"

                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_home"
                            android:text="Order Labs"
                            android:textColor="#14805a"
                            android:textSize="13sp" />

                        <Button
                            android:id="@+id/btn_order_medication"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:minHeight="200dp"

                            android:background="@drawable/button_home"
                            android:gravity="center"
                            android:text="Order Medications"
                            android:textColor="#14805a"
                            android:textSize="13sp" />
                    </LinearLayout>
                    <!--
                <Button
                    android:id="@+id/appointement_p"
                    android:layout_width="211dp"
                    android:layout_height="45dp"
                    android:text="Chat History"
                    android:textColor="#14805a"
                    android:textSize="16sp"
                    android:padding="5dp"
                    />
            -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="50dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        tools:ignore="MissingConstraints">

                        <Button
                            android:id="@+id/signOutBtn"
                            android:layout_width="211dp"
                            android:layout_height="45dp"
                            android:padding="5dp"
                            android:text="SignOut"
                            android:textColor="#14805a"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Demo Build"
                            android:textColor="@color/grey"
                            android:textSize="20dp"
                            android:visibility="visible" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>